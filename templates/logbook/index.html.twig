{% extends 'base.html.twig' %}

{% block title %}Logbooks{% endblock %}

{% block javascripts %}
    <script>
        import axios from "axios";

        function putReturn(data) {
            return axios({
                method: 'POST',
                url: "http://195.140.146.82/logbook/return",
                headers: "'Content-Type': 'application/json'",
                data: data
            });
        }

        function put(u_id, b_id) {
            let body = {
                user_id: u_id,
                book_id: b_id
            };
            return JSON.stringify(body);
        }

    </script>
{% endblock %}

{% block body %}
    <h1>Logbooks</h1>

    <table class="table">
        <thead>
        <tr>
            <th>Id</th>
            <td></td>
            <th>User_id</th>
            <td></td>
            <th>Book_id</th>
            <td></td>
            <th>Date take</th>
            <td></td>
            <th>Date return</th>
            <td></td>
            <th>actions</th>
        </tr>
        </thead>
        <tbody>
        {% for logbook in logbooks %}
            <tr>
                <td>{{ logbook.getId() }}</td>
                <td></td>
                <td>{{ logbook.getUser() }}</td>
                <td></td>
                <td>{{ logbook.getBook() }}</td>
                <td></td>
                <td>{{ logbook.getDateTake() }}</td>
                <td></td>
                <td>{{ logbook.getDateReturn() }}</td>
                <td></td>
                <td>
                    <a onclick="put({{ logbook.getUser() }}, {{ logbook.getBook() }});">Return</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="6">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}